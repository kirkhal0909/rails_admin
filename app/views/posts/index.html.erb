
<% if current_user %>
  <button><%= link_to "new post", new_post_path %></button>
  <hr>
<% end %>

<% @posts.each do |post| %>
  <h1><%= post.title %></h1>
  <p><%= post.content %></p>
  <p>created at: <%= post.created_at %> By <%= post.user.name %></p>
  <p>likes: <%= post.likes.count %></p>
  <%= link_to "open post", post_path(post) %>
  <hr/>
<% end %>
